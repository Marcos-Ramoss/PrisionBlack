<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Visitas</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/navbar', { user }) %>

  <!-- Main Content -->
  <div class="container mt-5">
    <h1 class="mb-4">Lista de Visitas de Familiares</h1>

    <!-- Botão Cadastrar Visita -->
    <div class="text-end mb-4">
      <a href="/visitas/cadastrar" class="btn btn-danger">
        <i class="fa-solid fa-plus"></i> Cadastrar Nova Visita
      </a>
    </div>

    <!-- Tabela de Visitas -->
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>Detento</th>
          <th>Nome do Familiar</th>
          <th>Relação</th>
          <th>Data da Visita</th>
          <th>Observações</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if (visitas.length > 0) { %>
          <% visitas.forEach(visita => { %>
            <tr>
              <td><%= visita.detento.nome %></td>
              <td><%= visita.nomeFamiliar %></td>
              <td><%= visita.relacao %></td>
              <td><%= visita.dataVisita.toLocaleDateString() %></td>
              <td><%= visita.observacoes || 'Nenhuma observação' %></td>
              <td>
                <a href="/visitas/<%= visita._id %>/editar" class="btn btn-primary btn-sm">
                  <i class="fa-solid fa-edit"></i> Editar
                </a>
                <a href="/visitas/<%= visita._id %>/excluir" class="btn btn-danger btn-sm">
                  <i class="fa-solid fa-trash"></i> Excluir
                </a>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center">Nenhuma visita cadastrada.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>