<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Visitas</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <!-- Estilo Personalizado -->
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/themeGlobal.css">
  <link rel="icon" type="image/png" href="/img/Logo_PrisionBlack.png">
</head>

<body>
  <!-- Navbar -->
  <%- include('../partials/navbar', { user }) %>

  <!-- Main Content -->
  <div class="container mt-5">
    <!-- Título com Botões -->
    <div class="row mb-4 align-items-center">
      <div class="col-md-6">
        <h1><i class="fa-solid fa-users me-2"></i> Lista de Visitas</h1>
      </div>
      <div class="col-md-6 text-md-end">
        <a href="/visitas/cadastrar" class="btn btn-danger">
          <i class="fa-solid fa-plus me-2"></i> Nova Visita
        </a>
      </div>
    </div>

    <!-- Filtros -->
    <div class="row search-and-filters mb-4">
      <div class="col-md-3 mb-3 mb-md-0">
        <div class="input-group">
          <span class="input-group-text"><i class="fa-solid fa-search"></i></span>
          <input type="text" id="searchInput" class="form-control" placeholder="Buscar visita...">
        </div>
      </div>
      <div class="col-md-3 mb-3 mb-md-0">
        <select class="form-select" id="filterTipo">
          <option value="">Todos os Tipos</option>
          <option value="familiar">Familiar</option>
          <option value="advogado">Advogado</option>
        </select>
      </div>
      <div class="col-md-3 mb-3 mb-md-0">
        <div class="input-group">
          <span class="input-group-text"><i class="fa-solid fa-calendar"></i></span>
          <input type="date" id="filterData" class="form-control">
        </div>
      </div>
      <div class="col-md-3 text-end">
        <button type="button" id="btnResetFilters" class="btn btn-secondary">
          <i class="fa-solid fa-rotate"></i> Limpar
        </button>
      </div>
    </div>

    <!-- Tabela de Visitas -->
    <div class="card shadow mb-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped theme-table" id="tabela-visitas">
            <thead>
              <tr>
                <th>Tipo</th>
                <th>Detento</th>
                <th>Visitante</th>
                <th>Data e Hora da Visita</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% if (visitas && visitas.length > 0) { %>
              <% visitas.forEach(visita => { %>
              <tr>
                <td>
                  <% if (visita.tipo === 'familiar') { %>
                  <span class="badge theme-badge theme-badge-cela">Familiar</span>
                  <% } else { %>
                  <span class="badge theme-badge theme-badge-sem-cela">Advogado</span>
                  <% } %>
                </td>
                <td><%= visita.detento ? visita.detento.nome : 'N/A' %></td>
                <td>
                  <% if (visita.tipo === 'familiar') { %>
                  <%= visita.nomeFamiliar %> (<%= visita.relacao %>)
                  <% } else { %>
                  <%= visita.nomeAdvogado %> (OAB: <%= visita.numeroOAB %>)
                  <% } %>
                </td>
                <td>
                  <%= new Date(visita.dataVisita).toLocaleString('pt-BR', { timeZone: 'America/Manaus' }).split(',')[0] %>
                  às <%= visita.horaVisita %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <a href="/visitas/<%= visita.tipo %>/<%= visita._id %>/editar" class="btn btn-primary btn-sm">
                      <i class="fa-solid fa-edit"></i>
                    </a>
                    <a href="/visitas/<%= visita.tipo %>/<%= visita._id %>/excluir" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir esta visita?')">
                      <i class="fa-solid fa-trash"></i>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
              <% } else { %>
              <tr>
                <td colspan="5" class="text-center">Nenhuma visita encontrada.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Script para filtros -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput');
      const filterTipo = document.getElementById('filterTipo');
      const filterData = document.getElementById('filterData');
      const btnResetFilters = document.getElementById('btnResetFilters');
      
      // Adicionar eventos de filtro
      if (searchInput) {
        searchInput.addEventListener('keyup', applyFilters);
      }
      
      if (filterTipo) {
        filterTipo.addEventListener('change', applyFilters);
      }
      
      if (filterData) {
        filterData.addEventListener('change', applyFilters);
      }
      
      if (btnResetFilters) {
        btnResetFilters.addEventListener('click', resetFilters);
      }
      
      function resetFilters() {
        searchInput.value = '';
        filterTipo.value = '';
        filterData.value = '';
        applyFilters();
      }
      
      function applyFilters() {
        const searchTerm = searchInput.value.toLowerCase();
        const tipoValue = filterTipo.value;
        const dataValue = filterData.value ? new Date(filterData.value) : null;
        const tableRows = document.querySelectorAll('#tabela-visitas tbody tr');
        
        tableRows.forEach(row => {
          let showRow = true;
          
          // Filtro de busca por texto
          if (searchTerm) {
            const detento = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
            const visitante = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
            if (!detento.includes(searchTerm) && !visitante.includes(searchTerm)) {
              showRow = false;
            }
          }
          
          // Filtro por tipo de visita
          if (tipoValue) {
            // Verifica se o tipo da badge corresponde ao tipo selecionado
            const badgeContent = row.querySelector('td:nth-child(1)').textContent.trim().toLowerCase();
            const rowTipo = badgeContent.includes('familiar') ? 'familiar' : 'advogado';
            
            if (tipoValue !== rowTipo) {
              showRow = false;
            }
          }
          
          // Filtro por data
          if (dataValue) {
            const dataVisitaText = row.querySelector('td:nth-child(4)').textContent;
            // Extrair apenas a parte da data (sem o horário)
            const dataPartOnly = dataVisitaText.split('às')[0].trim();
            // Tratando o formato brasileiro de data (dd/mm/yyyy)
            const parts = dataPartOnly.split('/');
            if (parts.length >= 3) {
              const day = parseInt(parts[0]);
              const month = parseInt(parts[1]) - 1; // Mês em JS é 0-11
              const year = parseInt(parts[2]);
              
              const rowDate = new Date(year, month, day);
              
              // Comparamos apenas a data, não a hora
              if (dataValue.getDate() !== rowDate.getDate() || 
                  dataValue.getMonth() !== rowDate.getMonth() || 
                  dataValue.getFullYear() !== rowDate.getFullYear()) {
                showRow = false;
              }
            }
          }
          
          row.style.display = showRow ? '' : 'none';
        });
      }
    });
  </script>
</body>

</html>