<%- include('../layouts/main') %>
<h1>Registrar Visita de Familiar</h1>
<form action="/visitas/familiares" method="POST">
  <div class="mb-3">
    <label for="detentoId">ID do Detento:</label>
    <input type="text" id="detentoId" name="detentoId" class="form-control" required>
  </div>
  <div class="mb-3">
    <label for="nomeVisitante">Nome do Visitante:</label>
    <input type="text" id="nomeVisitante" name="nomeVisitante" class="form-control" required>
  </div>
  <div class="mb-3">
    <label for="parentesco">Parentesco:</label>
    <input type="text" id="parentesco" name="parentesco" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-primary">Registrar</button>
</form>