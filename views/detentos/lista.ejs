<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Detentos</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/navbar', { user }) %>

  <!-- Main Content -->
  <div class="container mt-5">
    <h1 class="mb-4">Lista de Detentos</h1>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>Foto</th>
          <th>Nome</th>
          <th>Idade</th>
          <th>Filiação</th>
          <th>Estado Civil</th>
          <th>Reincidência</th>
          <th>Crimes Cometidos</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if (detentos.length > 0) { %>
          <% detentos.forEach(detento => { %>
            <tr>
              <td>
                <% if (detento.foto) { %>
                  <img src="/uploads/<%= detento.foto %>" alt="Foto de <%= detento.nome %>" class="rounded-circle" style="width: 50px; height: 50px;">
                <% } else { %>
                  <span>N/A</span>
                <% } %>
              </td>
              <td><%= detento.nome %></td>
              <td><%= detento.idade %></td>
              <td><%= detento.filiacao %></td>
              <td><%= detento.estadoCivil %></td>
              <td><%= detento.reincidencia ? 'Sim' : 'Não' %></td>
              <td><%= detento.crimes.join(', ') %></td>
              <td>
                <a href="/detentos/<%= detento._id %>/editar" class="btn btn-primary btn-sm">Editar</a>
                <a href="/detentos/<%= detento._id %>/excluir" class="btn btn-danger btn-sm">Excluir</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8" class="text-center">Nenhum detento cadastrado.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

 

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>