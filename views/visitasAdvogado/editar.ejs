<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Visita de Advogado</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/img/Logo_PrisionBlack.png">

</head>
<style> 
    .animated-button {
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }
    .animated-button:hover {
      transform: scale(1.1); 
      box-shadow: 0 8px 16px rgba(255, 0, 0, 0.3); 
    }
  </style>
<body>
  <!-- Navbar -->
  <%- include('../partials/navbar', { user }) %>

  <!-- Main Content -->
  <div class="container mt-5">
    <h1 class="mb-4">Editar Visita de Advogado</h1>
    <form action="/visitasAdvogado/<%= visita._id %>/editar" method="POST">
      <div class="row">
        <!-- Detento -->
        <div class="col-md-6 mb-3">
          <label for="detentoId" class="form-label">Detento</label>
          <select class="form-select" id="detentoId" name="detentoId" required>
            <% detentos.forEach(detento => { %>
              <option value="<%= detento._id %>" <%= visita.detento._id.toString() === detento._id.toString() ? 'selected' : '' %>>
                <%= detento.nome %>
              </option>
            <% }); %>
          </select>
        </div>

        <!-- Nome do Advogado -->
        <div class="col-md-6 mb-3">
          <label for="nomeAdvogado" class="form-label">Nome do Advogado</label>
          <input type="text" class="form-control" id="nomeAdvogado" name="nomeAdvogado" value="<%= visita.nomeAdvogado %>" required>
        </div>

        <!-- Número da OAB -->
        <div class="col-md-6 mb-3">
          <label for="numeroOAB" class="form-label">Número da OAB</label>
          <input type="text" class="form-control" id="numeroOAB" name="numeroOAB" value="<%= visita.numeroOAB %>" required>
        </div>

        <!-- Data da Visita -->
        <div class="col-md-6 mb-3">
          <label for="dataVisita" class="form-label">Data da Visita</label>
          <input type="date" class="form-control" id="dataVisita" name="dataVisita" value="<%= visita.dataVisita.toISOString().split('T')[0] %>" required>
        </div>

        <!-- Observações -->
        <div class="col-md-12 mb-3">
          <label for="observacoes" class="form-label">Observações</label>
          <textarea class="form-control" id="observacoes" name="observacoes" rows="3"><%= visita.observacoes || '' %></textarea>
        </div>
      </div>

      <!-- Botão de Envio -->
      <button type="submit" class="btn btn-success w-100 animated-button">Salvar Alterações</button>
    </form>
    <br>
    <a href="/visitasAdvogado/lista"> <button type="submit" class="btn btn-danger w-100 animated-button">Retornar Lista</button> </a>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>