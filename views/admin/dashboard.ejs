<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard do Admin</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/dashboardAdmin.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="icon" type="image/png" href="/img/Logo_PrisionBlack.png">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">
        <i class="fa-solid fa-gavel"></i> PrisionBlack
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <span class="nav-link">
              <i class="fa-solid fa-user-circle"></i> Olá, <%= user.nome %>!
            </span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="fa-solid fa-sign-out-alt"></i> Sair
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Barra Lateral -->
  <div class="sidebar">
    <button class="close-sidebar">
      <i class="fas fa-times"></i>
    </button>
    <ul class="sidebar-menu">
      <li>
        <button data-section="estatisticas">
          <i class="fas fa-chart-bar"></i> Estatísticas
        </button>
      </li>
      <li>
        <button data-section="gerenciamento">
          <i class="fas fa-cogs"></i> Gerenciamento Rápido
        </button>
      </li>
      <li>
        <button data-section="graficos">
          <i class="fas fa-chart-line"></i> Gráficos
        </button>
      </li>
    </ul>
  </div>

  <div class="main-content">
    <button class="sidebar-toggle">
      <i class="fas fa-bars"></i>
    </button>
    <h1 class="page-title"><i class="fa-solid fa-tachometer-alt me-2"></i>Dashboard do Admin</h1>

    <!-- Seção de Estatísticas -->
    <div id="estatisticas" class="content-section">
      <h3>Estatísticas</h3>
      <div class="stats-grid">
        <div class="stat-card">
          <i class="fa-solid fa-users text-primary"></i>
          <h5>Detentos</h5>
          <p class="stats-number"><%= totalDetentos %></p>
        </div>
        <div class="stat-card">
          <i class="fa-solid fa-bed text-success"></i>
          <h5>Celas Ocupadas</h5>
          <p class="stats-number"><%= totalCelasOcupadas %></p>
        </div>
        <div class="stat-card">
          <i class="fa-solid fa-door-open text-warning"></i>
          <h5>Celas Disponíveis</h5>
          <p class="stats-number"><%= totalCelasDisponiveis %></p>
        </div>
        <div class="stat-card">
          <i class="fa-solid fa-user-check text-info"></i>
          <h5>Celas Alocadas</h5>
          <p class="stats-number"><%= totalCelasAlocadas %></p>
        </div>
        <div class="stat-card">
          <i class="fa-solid fa-handshake text-info"></i>
          <h5>Visitas Familiares</h5>
          <p class="stats-number"><%= totalVisitasFamiliares %></p>
        </div>
        <div class="stat-card">
          <i class="fa-solid fa-balance-scale text-danger"></i>
          <h5>Visitas Advogados</h5>
          <p class="stats-number"><%= totalVisitasAdvogados %></p>
        </div>
      </div>
    </div>

    <!-- Seção de Gerenciamento Rápido -->
    <div id="gerenciamento" class="content-section" style="display: none;">
      <h3>Gerenciamento Rápido</h3>
      <div class="row g-4">
        <div class="col-md-6 col-lg-3">
          <a href="/detentos/lista" class="card text-decoration-none text-white h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
              <i class="fa-solid fa-user fa-3x text-primary mb-3"></i>
              <h5 class="card-title text-center">Gerenciar Detentos</h5>
            </div>
          </a>
        </div>
        <div class="col-md-6 col-lg-3">
          <a href="/celas/lista" class="card text-decoration-none text-white h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
              <i class="fa-solid fa-door-closed fa-3x text-success mb-3"></i>
              <h5 class="card-title text-center">Gerenciar Celas</h5>
            </div>
          </a>
        </div>
        <div class="col-md-6 col-lg-3">
          <a href="/relatorios/ocupacao" class="card text-decoration-none text-white h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
              <i class="fa-solid fa-chart-line fa-3x text-info mb-3"></i>
              <h5 class="card-title text-center">Ver Relatórios</h5>
            </div>
          </a>
        </div>
        <div class="col-md-6 col-lg-3">
          <a href="/admin/gerenciar-usuarios" class="card text-decoration-none text-white h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
              <i class="fa-solid fa-users-gear fa-3x text-warning mb-3"></i>
              <h5 class="card-title text-center">Gerenciar Inspetores/Diretores</h5>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Seção de Gráficos -->
    <div id="graficos" class="content-section" style="display: none;">
      <h3>Gráficos</h3>
      <div class="graficos-grid">
        <div class="chart-container">
          <div class="chart-header">
            <h5 class="chart-title">Estatísticas de Celas</h5>
            <div class="btn-group">
              <button class="btn btn-dark" onclick="changeChartType('celasChart', 'bar')" title="Gráfico de Barras">
                <i class="fa-solid fa-chart-bar"></i>
              </button>
              <button class="btn btn-dark" onclick="changeChartType('celasChart', 'line')" title="Gráfico de Linha">
                <i class="fa-solid fa-chart-line"></i>
              </button>
              <button class="btn btn-dark" onclick="changeChartType('celasChart', 'pie')" title="Gráfico de Pizza">
                <i class="fa-solid fa-chart-pie"></i>
              </button>
            </div>
          </div>
          <canvas id="celasChart"></canvas>
        </div>

        <div class="chart-container">
          <div class="chart-header">
            <h5 class="chart-title">Estatísticas de Visitas</h5>
            <div class="btn-group">
              <button class="btn btn-dark" onclick="changeChartType('visitChart', 'bar')" title="Gráfico de Barras">
                <i class="fa-solid fa-chart-bar"></i>
              </button>
              <button class="btn btn-dark" onclick="changeChartType('visitChart', 'line')" title="Gráfico de Linha">
                <i class="fa-solid fa-chart-line"></i>
              </button>
              <button class="btn btn-dark" onclick="changeChartType('visitChart', 'pie')" title="Gráfico de Pizza">
                <i class="fa-solid fa-chart-pie"></i>
              </button>
            </div>
          </div>
          <canvas id="visitChart"></canvas>
        </div>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/sidebar.js"></script>
  <script src="/js/dashboard-charts.js"></script>
  <script>
    const chartData = {
      totalCelas: <%= totalCelas %>,
      totalCelasOcupadas: <%= totalCelasOcupadas %>,
      totalCelasDisponiveis: <%= totalCelasDisponiveis %>,
      totalCelasAlocadas: <%= totalCelasAlocadas %>,
      totalVisitasFamiliares: <%= totalVisitasFamiliares %>,
      totalVisitasAdvogados: <%= totalVisitasAdvogados %>
    };

    document.addEventListener('DOMContentLoaded', function() {
      initializeCharts(chartData);
    });
  </script>



</body>

</html>