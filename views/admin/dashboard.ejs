<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard do Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <!-- Estilos Personalizados -->
    <link rel="stylesheet" href="/css/styles.css">
  <style>
    .card {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    .list-group-item {
      border: none;
      border-radius: 8px;
      margin-bottom: 10px;
      transition: background-color 0.3s ease;
    }
    .list-group-item:hover {
      background-color: #f8f9fa;
    }
    .display-4 {
      font-size: 2.5rem;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="fa-solid fa-gavel"></i> PrisionBlack
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <span class="nav-link">
              <i class="fa-solid fa-user-circle"></i> Olá, <%= user.nome %>!
            </span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="fa-solid fa-sign-out-alt"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Conteúdo do Dashboard -->
  <div class="container mt-5">
   <center><h1 class="mb-4"><i class="fa-solid fa-tachometer-alt me-2"></i> Dashboard do Admin</h1> </center> 

    <!-- Estatísticas Resumidas -->
    <div class="row g-4">
      <!-- Detentos -->
      <div class="col-md-4">
        <div class="card text-center bg-primary text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-solid fa-users me-2"></i> Detentos</h5>
            <p class="card-text display-4"><%= totalDetentos %></p>
          </div>
        </div>
      </div>

      <!-- Celas Ocupadas -->
      <div class="col-md-4">
        <div class="card text-center bg-success text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-solid fa-bed me-2"></i> Celas Ocupadas</h5>
            <p class="card-text display-4"><%= totalCelasOcupadas %></p>
          </div>
        </div>
      </div>

      <!-- Celas Disponíveis -->
      <div class="col-md-4">
        <div class="card text-center bg-warning text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-solid fa-door-open me-2"></i> Celas Disponíveis</h5>
            <p class="card-text display-4"><%= totalCelasDisponiveis %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Visitas -->
    <div class="row g-4 mt-4">
      <!-- Visitas Familiares -->
      <div class="col-md-6">
        <div class="card text-center bg-info text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-solid fa-handshake me-2"></i> Visitas Familiares</h5>
            <p class="card-text display-4"><%= totalVisitasFamiliares %></p>
          </div>
        </div>
      </div>

      <!-- Visitas Advogados -->
      <div class="col-md-6">
        <div class="card text-center bg-danger text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-solid fa-balance-scale me-2"></i> Visitas Advogados</h5>
            <p class="card-text display-4"><%= totalVisitasAdvogados %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Links Rápidos -->
    <div class="row mt-5">
        <div class="col-md-12">
          <!-- Título -->
          <h4 class="mb-4"><i class="fa-solid fa-bolt me-2"></i> Gerenciamento Rápido</h4>
      
          <!-- Links Rápidos em Grade -->
          <div class="row g-4">
            <!-- Gerenciar Detentos -->
            <div class="col-md-6 col-lg-3">
              <a href="/detentos/lista" class="card text-decoration-none text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                  <i class="fa-solid fa-user fa-3x text-primary mb-3"></i>
                  <h5 class="card-title text-center">Gerenciar Detentos</h5>
                </div>
              </a>
            </div>
      
            <!-- Gerenciar Celas -->
            <div class="col-md-6 col-lg-3">
              <a href="/celas/lista" class="card text-decoration-none text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                  <i class="fa-solid fa-door-closed fa-3x text-success mb-3"></i>
                  <h5 class="card-title text-center">Gerenciar Celas</h5>
                </div>
              </a>
            </div>
      
            <!-- Ver Relatórios -->
            <div class="col-md-6 col-lg-3">
              <a href="/relatorios/ocupacao" class="card text-decoration-none text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                  <i class="fa-solid fa-chart-line fa-3x text-info mb-3"></i>
                  <h5 class="card-title text-center">Ver Relatórios</h5>
                </div>
              </a>
            </div>
      
            <!-- Gerenciar Inspetores/Diretores -->
            <div class="col-md-6 col-lg-3">
              <a href="/admin/admin/gerenciar-usuarios" class="card text-decoration-none text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                  <i class="fa-solid fa-users-gear fa-3x text-warning mb-3"></i>
                  <h5 class="card-title text-center">Gerenciar Inspetores/Diretores</h5>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>

      <br><br><br><br><br><br>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>