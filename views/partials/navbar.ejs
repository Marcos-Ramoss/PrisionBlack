<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PrisionBlack</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">

</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <i class="fa-solid fa-gavel"></i> PrisionBlack
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/detentos/lista"><i class="fa-solid fa-user"></i> Detentos</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="/celas/lista"><i class="fa-solid fa-door-closed"></i> Celas</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="/visitas/lista"><i class="fa-solid fa-users"></i> Visitas
            Familiar</a></li>
        <li class="nav-item"><a class="nav-link" href="/visitasAdvogado/lista"><i class="fa-solid fa-gavel"></i> Visitas
            Advogado</a></li>

        <li class="nav-item"><a class="nav-link" href="/relatorios/ocupacao"><i class="fa-solid fa-chart-line"></i>
            Relatórios</a></li>
      </ul>
      <% if (user) { %>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><span class="nav-link"><i class="fa-solid fa-user-circle"></i> Olá, <%= user.username %>
                !</span></li>
          <li class="nav-item"><a class="nav-link" href="/logout"><i class="fa-solid fa-sign-out-alt"></i> Logout</a>
          </li>
        </ul>
        <% } else { %>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">
                <i class="fa-solid fa-sign-in-alt"></i> Login
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">
                <i class="fa-solid fa-user-plus"></i> Registrar
              </a>
            </li>
          </ul>
          <% } %>
    </div>
  </div>
</nav>



<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark text-white">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel"><i class="fa-solid fa-sign-in-alt"></i> Login</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Usuário</label>
            <input type="text" class="form-control bg-dark text-white" id="username" name="username" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control bg-dark text-white" id="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-danger w-100">Entrar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Register Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark text-white">
      <div class="modal-header">
        <h5 class="modal-title" id="registerModalLabel"><i class="fa-solid fa-user-plus"></i> Registro</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/register" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Usuário</label>
            <input type="text" class="form-control bg-dark text-white" id="username" name="username" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control bg-dark text-white" id="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-danger w-100">Registrar</button>
        </form>
      </div>
    </div>
  </div>
</div>


<script src="/js/themeService.js"></script>

<script>
  // Configura o botão de alternância de tema
  const themeService = window.themeService;
  const toggleThemeButton = document.getElementById('toggleThemeButton');
  const themeIcon = document.getElementById('themeIcon');

  // Atualiza o ícone com base no tema atual
  function updateThemeIcon() {
    themeIcon.className = themeService.currentTheme === 'light' ? 'fa-solid fa-moon' : 'fa-solid fa-sun';
    console.log(`Ícone atualizado para o tema: ${themeService.currentTheme}`); // Log do ícone
  }

  // Adiciona o evento de clique ao botão
  toggleThemeButton.addEventListener('click', () => {
    console.log('Botão de alternância de tema clicado'); // Log do clique
    themeService.toggleTheme();
    updateThemeIcon();
  });

  // Inicializa o ícone correto
  updateThemeIcon();
</script>



